    <div class="widget widget_latestpost"><h3 class="title"><span>Videos</span></h3>
        <div class="latest-posts">
            {% set videos = entries('videos').orderBy('slug','ASC').limit(1).get() %}
            {% for video in videos %}
            <article class="post">
                <iframe width="560" height="315" src="{{ video.video.embed |raw }}" frameborder="0" allowfullscreen></iframe>


                <h4 class="post-title">
                    <a href="{{  video.route('view')}}" title="{{ video.title}}" rel="bookmark">{{ video.title}}</a>
                    <span class="date">{{ post.publish_at.format(config_get('streams::datetime.date_format')) }}</span>
                </h4>
                <p>{{ substr(video.description,0,150) }}..</p>
            </article>
            {% endfor %}
            {{ videos.render|raw }}


        </div>
    </div>


</div><!-- sidebar -->

