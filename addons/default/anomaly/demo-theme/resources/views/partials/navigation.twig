<header id="header" class="container">
    <div id="mast-head">
        <div id="logo">
            {% set logos = entries('website_setting','logo').limit(1).get() %}
            {% for logo in logos %}
            <a href="{{ url('/') }}" title="{{ config_get("streams::distribution.name") }}" rel="home">{{ logo.logo.make.fit('113','20')|raw }}
            </a>
            {% endfor %}
            {{ logo.render|raw }}
        </div>

    </div>


    <nav class="navbar navbar-inverse clearfix nobot">

        <a id="responsive-menu-button" href="#swipe-menu">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <!-- Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse. -->
        <div class="nav-collapse" id="swipe-menu-responsive">

            <ul class="nav">


                <li>
                    <a><span>  {{ user().display_name }}  {{  user().display_name ?  trans('anomaly.theme.demo::messages.Hello') : ''  }} </span></a>
                </li>
                <li><a href="{{ url('/') }}"><img src="{{ image_url('anomaly.theme.demo::images/home.png') }}" alt="Magazine"></a></li>
                {{ structure()
                .linkAttributesDropdown({'data-toggle': 'dropdown'})
                .listClass('nav navbar-nav navbar-right')
                .childListClass('dropdown-menu')
                .render()|raw }}
                <li>

                    <a href="{{ url_route('anomaly.module.posts::posts.index') }}">

                      {{ trans('anomaly.theme.demo::messages.post') }} </a>
                </li>
                <li><a href='videos'>{{ trans('anomaly.theme.demo::messages.videos') }}</a></li>
                <li><a href="{{ url('contact') }}">{{ trans('anomaly.theme.demo::messages.contact') }}</a></li>
                <li><a href="{{ url('about') }}">{{ trans('anomaly.theme.demo::messages.about') }}</a></li>


                <li class="dropdown"><a class="dropdown-toggle disabled">{{ trans('anomaly.theme.demo::messages.lang') }}<b class="caret"></b></a>
                    <ul class="sub-menu dropdown-menu">
                        <li><a href= '?_locale=ar' >{{ trans('anomaly.theme.demo::messages.Arabic') }}</a></li>
                        <li><a href='?_locale=en'>{{ trans('anomaly.theme.demo::messages.English') }}</a></li>


                    </ul>
                </li>
                <li>
                    {% if auth_check() %}
                        <a href="{{ url_route('anomaly.module.users::logout') }}">{{ trans('anomaly.theme.demo::messages.logout') }}</a>
                    {% else %}
                        <a href="{{ url_route('anomaly.module.users::login') }}">{{ trans('anomaly.theme.demo::messages.login') }}</a>
                    {% endif %}
                </li>



            </ul>

        </div><!--/.nav-collapse -->

    </nav><!-- /.navbar -->

</header><!-- #masthead -->