


{% for post in posts %}



    <li style="float: left; list-style: none; position: relative; width: 172px; margin-right: 27px;"><a class="image_thumb_zoom" href="{{ post.route('view') }}" title="Permalink to Nam nibh arcu tristique eget pretium vitae libero ac risus" rel="bookmark">
            {{ post.b.make.fit(225, 136)|raw }}
        </a>
        <h4 class="post-title clearfix">

            <a href="{{ post.route('view') }}" title="{{ post.title }}" rel="bookmark">{{ post.title }}</a>
        </h4>

        <div class="meta clearfix">
             <span class="author">
                        {{ post.author.display_name }}
             </span>
            <time class="date" datetime="{{ post.publish_at.iso }}">
                {{ post.publish_at.format(config_get('streams::datetime.date_format')) }}
            </time> <span class="author">
                    {{ post.author.display_name }}
                </span>
            {% if post.category %}
                <span class="category">
                        &mdash; {{ html_link(post.category.route('view'), post.category.name) }}
                    </span>
            {% endif %}

            {% if post.tags %}
                <div class="tags">
                    {% for tag in post.tags.value %}
                        <a href="{{ url_route('anomaly.module.posts::tags.view', {'tag': tag}) }}"
                           class="label label-info list-inline-item">
                            {{ tag }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="ratings">
                <span class="star-rating-control"><div class="rating-cancel" style="display: none;"><a title="Cancel Rating"></a></div><div role="text" aria-label="" class="star-rating rater-1 star star-rating-applied star-rating-readonly"><a title="1">1</a></div><div role="text" aria-label="" class="star-rating rater-1 star star-rating-applied star-rating-readonly"><a title="2">2</a></div><div role="text" aria-label="" class="star-rating rater-1 star star-rating-applied star-rating-readonly"><a title="3">3</a></div><div role="text" aria-label="" class="star-rating rater-1 star star-rating-applied star-rating-readonly"><a title="4">4</a></div><div role="text" aria-label="" class="star-rating rater-1 star star-rating-applied star-rating-readonly"><a title="5">5</a></div></span><input class="star star-rating-applied star-rating-readonly" type="radio" name="home-top-rating-2" value="1" disabled="disabled" style="display: none;">
                <input class="star star-rating-applied star-rating-readonly" type="radio" name="home-top-rating-2" value="2" disabled="disabled" style="display: none;">
                <input class="star star-rating-applied star-rating-readonly" type="radio" name="home-top-rating-2" value="3" disabled="disabled" checked="checked" style="display: none;">
                <input class="star star-rating-applied star-rating-readonly" type="radio" name="home-top-rating-2" value="4" disabled="disabled" style="display: none;">
                <input class="star star-rating-applied star-rating-readonly" type="radio" name="home-top-rating-2" value="5" disabled="disabled" style="display: none;">
            </div>
        </div>
    </li>
{% endfor %}
