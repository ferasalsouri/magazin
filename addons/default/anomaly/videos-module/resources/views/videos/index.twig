{% extends 'anomaly.theme.demo::layouts/default' %}



{% block content %}

    {% set videos = entries('videos').orderBy('slug','ASC').paginate() %}

        {% for video in videos %}
            <article id="post-532" class="post-532 product type-product status-publish has-post-thumbnail hentry instock">
                <h2 class="entry-title">
                    <span class="the_title"><a href="{{ video.route('view') }}" title="{{ video.title }}" rel="bookmark">{{ video.title }}</a></span>
                    <span class="entry-cat"> {{ html_link(video.series.route('view'),video.series.title) }}</span>
                </h2>


                <iframe width="560" height="315" src="{{ video.video.embed |raw }}" frameborder="0" allowfullscreen></iframe>


                <div class="entry-content">
                    <div id="stcpDiv">

                        <p>{{ video.description  }}</p>
                    </div>
                </div>

            </article>



        {% endfor %}

     {{ videos.render|raw }}
{% endblock %}
